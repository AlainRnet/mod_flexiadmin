<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field
            name="nameblockcustom"
            type="text"
            label="FLEXI_ADMIN_BLOCKCUSTOM"
            description="FLEXI_ADMIN_BLOCKCUSTOM_DESC"
    />

    <field
            name="catidlist"
            type="flexicategories"
            multiple="false"
            label="FLEXI_ADMIN_CAT"
            description="FLEXI_ADMIN_CAT_DESC"
    />

    <field
            name="extrafieldlist"
            type="fields"
            multiple="false"
            groupables="0"
            issortable="1"
            fieldnameasvalue="1"
            label="FLEXI_ADMIN_EXTRAFIELD"
            description="FLEXI_ADMIN_EXTRAFIELD_DESC"
            default=""
            size="50"
    />

    <field
            name="displautblock"
            label="FLEXI_ADMIN_DISPLAY_AUTHOR"
            type="radio"
            default="1"
            layout="joomla.form.field.radio.switcher"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field
            name="displdateblock"
            label="FLEXI_ADMIN_DISPLAY_DATE"
            type="radio"
            default="1"
            layout="joomla.form.field.radio.switcher"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field
            name="width"
            type="number"
            default="45"
            label="FLEXI_ADMIN_WIDTHCOL"
            description="FLEXI_ADMIN_WIDTHCOL_DESC"
            min="0" max="100"
            step="5"
    />
</form>
