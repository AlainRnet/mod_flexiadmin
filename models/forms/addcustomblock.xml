<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field name="" type="separator" default="FLEXI_ADMIN_CUSTOM_BLOCK_SETTINGS" level="level2"/>
    <field type="spacer" name="" hr=""/>

    <field
            name="block_title"
            type="text"
            label="FLEXI_ADMIN_BLOCKCUSTOM"
            description="FLEXI_ADMIN_BLOCKCUSTOM_DESC"
    />

    <field
            name="type_of_block"
            type="list"
            label="FLEXI_ADMIN_TYPEOFBLOCK"
            description="FLEXI_ADMIN_TYPEOFBLOCK_DESC"
            default="standard"
    >
        <option value="standard">FLEXI_ADMIN_TYPEOFBLOCK_STANDARD</option>
        <option value="action_logs">FLEXI_ADMIN_TYPEOFBLOCK_ACTIONLOGS</option>
    </field>

    <field
            name="count"
            type="number"
            default="5"
            min="1"
            max="100"
            label="FLEXI_ADMIN_NBITEM"
            description="FLEXI_ADMIN_NBITEM_DESC"
            showon="type_of_block:standard"
    />

    <field
            name="count_action"
            type="list"
            default="5"
            label="FLEXI_ADMIN_NBACTIONS"
            description="FLEXI_ADMIN_NBACTIONS_DESC"
            showon="type_of_block:action_logs"
            parentclass="span-2-inline stack"
    >
        <option value="1">1</option>
        <option value="3">3</option>
        <option value="5">5</option>
        <option value="10">10</option>
        <option value="15">15</option>
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
    </field>

    <field
            name="cat_id_list"
            type="flexicategories"
            multiple="true"
            label="FLEXI_ADMIN_CAT"
            description="FLEXI_ADMIN_CATLIST_DESC"
            showon="type_of_block:standard"
    />

    <field
            name="state"
            type="list"
            label="FLEXI_ADMIN_CUSTOM_BLOCK_STATE"
            description="FLEXI_ADMIN_CUSTOM_BLOCK_STATE_DESC"
            default="all"
            showon="type_of_block:standard"
    >
        <option value="all">FLEXI_ADMIN_CUSTOM_BLOCK_STATE_ALL</option>
        <option value="0">FLEXI_UNPUBLISHED</option>
        <option value="1">FLEXI_PUBLISHED</option>
        <option value="2">FLEXI_ARCHIVED</option>
        <option value="-2">FLEXI_TRASHED</option>
        <option value="-3">FLEXI_PENDING</option>
        <option value="-4">FLEXI_DRAFT</option>
        <option value="-5">FLEXI_IN_PROGRESS</option>
    </field>

    <field
            name="author_only"
            type="radio"
            label="FLEXI_ADMIN_DISPLAY_AUTHOR_ONLY"
            description="FLEXI_ADMIN_DISPLAY_AUTHOR_ONLY_DESC"
            default="0"
            layout="joomla.form.field.radio.switcher"
            showon="type_of_block:standard"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field
            name="featured_only"
            type="radio"
            label="FLEXI_ADMIN_DISPLAY_FEATURED_ONLY"
            description="FLEXI_ADMIN_DISPLAY_FEATURED_ONLY_DESC"
            default="0"
            layout="joomla.form.field.radio.switcher"
            showon="type_of_block:standard"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field name="" type="separator" default="FLEXI_ADMIN_CUSTOM_BLOCK_DISPLAY_SETTINGS" level="level2"/>
    <field type="spacer" name="" hr=""/>

    <field
            name="icon"
            type="iconpicker"
            default=""
            label="FLEXI_ADMIN_ICON"
            description="FLEXI_ADMIN_ICON_DESC"
    />

    <field type="spacer" name="" hr=""/>

    <field
            name="icon_color"
            type="color"
            default=""
            format="rgba"
            label="FLEXI_ADMIN_ICON_COLOR"
            description="FLEXI_ADMIN_ICON_COLOR_DESC"
    />

    <field type="spacer" name="" hr=""/>

    <field
            name="extra_field_list"
            type="fields"
            multiple="false"
            groupables="0"
            issortable="1"
            fieldnameasvalue="1"
            label="FLEXI_ADMIN_EXTRAFIELD"
            description="FLEXI_ADMIN_EXTRAFIELD_DESC"
            default=""
            size="50"
            showon="type_of_block:standard"
    />

    <field
            name="display_author"
            label="FLEXI_ADMIN_DISPLAY_AUTHOR"
            type="radio"
            default="1"
            layout="joomla.form.field.radio.switcher"
            showon="type_of_block:standard"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field
            name="display_date"
            label="FLEXI_ADMIN_DISPLAY_DATE"
            type="radio"
            default="1"
            layout="joomla.form.field.radio.switcher"
            showon="type_of_block:standard"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field
            name="width"
            type="number"
            default="45"
            label="FLEXI_ADMIN_WIDTHCOL"
            description="FLEXI_ADMIN_WIDTHCOL_DESC"
            min="0" max="100"
            step="5"
    />

    <field
            name="fixed_height"
            type="number"
            default=""
            label="FLEXI_ADMIN_BLOCKHEIGHT"
            description="FLEXI_ADMIN_BLOCKHEIGHT_DESC"
    />
</form>
