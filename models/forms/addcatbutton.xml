<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field
            name="namecatfilter"
            type="text"
            label="MOD_FLEXI_ADMIN_NAME_BUTTON"
            description="MOD_FLEXI_ADMIN_NAME_BUTTON_DESC"
    />

    <field
            name="filtercatids"
            type="flexicategories"
            multiple="false"
            default=""
            label="MOD_FLEXI_ADMIN_CAT"
            description="MOD_FLEXI_ADMIN_CAT_DESC"
    />

    <field
            name="button_type"
            label="MOD_FLEXI_ADMIN_TYPES"
            description="MOD_FLEXI_ADMIN_TYPES_DESC"
            size="5"
            type="types"
            multiple="false"
            hide_default="true"
            hide_none="true"
            class="custom-select"
    />

    <field
            name="displayauthoronly"
            label="MOD_FLEXI_ADMIN_DISPLAY_AUTHOR_ONLY"
            description="MOD_FLEXI_ADMIN_DISPLAY_AUTHOR_ONLY_DESC"
            type="radio"
            default="0"
            layout="joomla.form.field.radio.switcher"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field
            name="button_lang"
            type="contentlanguage"
            label="MOD_FLEXI_ADMIN_LANG"
            description="MOD_FLEXI_ADMIN_LANG_DESC"
            class="span12 small"
    >
        <option value="*">JALL</option>
    </field>

    <field
            name="iconbutton"
            type="iconpicker"
            default="fa-list"
            label="MOD_FLEXI_ADMIN_ICON"
            description="MOD_FLEXI_ADMIN_ICON_DESC"
    />

    <field
            name="coloricon"
            type="color"
            default=""
            format="rgba"
            label="MOD_FLEXI_ADMIN_ICON_COLOR"
            description="MOD_FLEXI_ADMIN_ICON_COLOR_DESC"
    />

    <field
            name="targetlink"
            label="MOD_FLEXI_ADMIN_TARGETLINK"
            description="MOD_FLEXI_ADMIN_TARGETLINK_DESC"
            type="radio"
            default="_self"
            class="btn-group btn-group-yesno"
    >
        <option value="_self">MOD_FLEXI_ADMIN_SELF</option>
        <option value="_blank">MOD_FLEXI_ADMIN_BLANK</option>
    </field>

    <field
            name="displayline"
            label="MOD_FLEXI_ADMIN_DISPLAY_LINE"
            description="MOD_FLEXI_ADMIN_DISPLAY_LINE_DESC"
            type="radio"
            default="0"
            layout="joomla.form.field.radio.switcher"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>
</form>
